<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.example.mydiary.MyTopview
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/wd_mytopview">
        </com.example.mydiary.MyTopview>

    <com.example.mydiary.MyDate2
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wd_mydate2">
        </com.example.mydiary.MyDate2>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_wd_title"
            android:textColor="@color/gray"
            android:hint="title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/image_wd_weather"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sunny"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_wd_title" />

        <ImageView
            android:id="@+id/image_wd_feeling"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/happy"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>


    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="blablabla"
        android:id="@+id/et_wd_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"/>


</LinearLayout>